@page
@model Stock_Manager.Pages.Clients.ClientsModel
@{
}
<br>
<h2>Liste des clients</h2>

<input type="text" id="searchInput" placeholder="Rechercher par nom..." class="form-control mb-3" style="width:300px;">

<a class='btn btn-primary btn-sm mb-3' href='/Clients/Create'> Nouveau client</a>

@if (Model.listClients.Count == 0)
{
    <p style="color:red;">Aucun client trouvé dans la base de données.</p>
}

<table class="table" id="clientsTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Adresse</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listClients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.nom</td>
                <td>@item.email</td>
                <td>@item.telephone</td>
                <td>@item.adresse</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='/Clients/Edit?id=@item.id'>Éditer</a>
                    <a class='btn btn-danger btn-sm' href='/Clients/Delete?id=@item.id'>Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchInput');
        const table = document.getElementById('clientsTable').getElementsByTagName('tbody')[0];
        const rows = table.getElementsByTagName('tr');

        searchInput.addEventListener('keyup', function () {
            const filter = searchInput.value.toLowerCase();

            for (let i = 0; i < rows.length; i++) {
                const td = rows[i].getElementsByTagName('td')[1];
                if (td) {
                    const txtValue = td.textContent || td.innerText;
                    rows[i].style.display = txtValue.toLowerCase().startsWith(filter) ? '' : 'none';
                }
            }
        });
    });
</script>
